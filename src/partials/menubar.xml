<MenuBar>
	<Menu name="Synth">
		<Menu name="About Synth" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Synth" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Send Synth Feedback"/>
		<Menu type="divider"/>
		<Menu name="Synth Help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
	<Menu for="score-board">
		<Menu name="Songs">
			<Menu name="Abba" click="select-song" arg="~/midi/abba.mid" check-group="midi-song"/>
			<Menu name="Brahms" click="select-song" arg="~/midi/brahms.mid" check-group="midi-song"/>
			<Menu name="Cabeza" click="select-song" arg="~/midi/cabeza.mid" check-group="midi-song" is-checked="1"/>
			<Menu name="Havana" click="select-song" arg="~/midi/havana.mid" check-group="midi-song"/>
			<Menu name="Swans" click="select-song" arg="~/midi/swansmid" check-group="midi-song"/>
			<Menu name="Trolls" click="select-song" arg="~/midi/trolls.mid" check-group="midi-song"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Effect">
			<Menu name="Off" click="select-reverb" arg="" check-group="midi-reverb" is-checked="1"/>
			<Menu type="divider"/>
			<Menu name="Large Hall" click="select-reverb" arg="~/ir/large-hall.ogg" check-group="midi-reverb"/>
			<Menu name="Artifical Forest" click="select-reverb" arg="~/ir/artificial-forest.mp3" check-group="midi-reverb"/>
			<Menu name="Going Home" click="select-reverb" arg="~/ir/going-home.wav" check-group="midi-reverb"/>
			<Menu name="Greek Echo Hall" click="select-reverb" arg="~/ir/greek-echo-hall.wav" check-group="midi-reverb"/>
			<Menu name="Large Bottle" click="select-reverb" arg="~/ir/large-bottle-hall.wav" check-group="midi-reverb"/>
			<Menu name="Large Long Echo Hall" click="select-reverb" arg="~/ir/large-long-echo-hall.wav" check-group="midi-reverb"/>
			<Menu name="Large Wide Echo Hall" click="select-reverb" arg="~/ir/large-wide-echo-hall.wav" check-group="midi-reverb"/>
			<Menu name="St Nicholaes Chruch" click="select-reverb" arg="~/ir/st-nicolaes-church.wav" check-group="midi-reverb"/>
		</Menu>
		<Menu type="divider"/>
		<Menu type="caption" name="Volume:"/>
		<Menu type="slider" min="0" max="100" value="100" change="midi-volume"/>
		<Menu type="divider"/>
		<Menu type="caption" name="Seek:"/>
		<Menu type="slider" min="0" max="100" value="0" change="midi-seek"/>
	</Menu>
</MenuBar>
